<Window x:Class="accounting_platform.view.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Дополнительная информация" Height="450" Width="800"
        Name="this"
        >
    <Grid Initialized="Grid_Initialized" x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30px"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" x:Name="gridAttendance">
            <Grid.RowDefinitions>
                <RowDefinition Height="30px"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Таблица: Статусы посещаемости" FontWeight="Bold" FontSize="14"/>
            <DataGrid AutoGenerateColumns="False" Grid.Row="1" x:Name="statusAttendanceTable" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Width="*" Binding="{Binding Path=id}"/>
                    <DataGridTextColumn Header="Имя" Width="*" Binding="{Binding Path=name}"/>
                    <DataGridTextColumn Header="Описания" Width="*" Binding="{Binding Path=description}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <GridSplitter x:Name="splitter1" Grid.Row="1" Height="3"
        HorizontalAlignment="Stretch" VerticalAlignment="Center" />
        <Grid x:Name="gridWorker" Grid.Row="2">
            <!-- <Grid.RowDefinitions>  
                <RowDefinition Height="30px"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions> -->
            <!-- Label Grid.Row="0" Content="Таблица: Статусы сотрудников" FontWeight="Bold" FontSize="14"/>-->
